{% extends "WAZAGestionBundle:Default:index.html.twig" %}
{% block body %}
    <div class="container">
        {% trans_default_domain 'FOSUserBundle' %}
        {{form_start(form, {'method': 'POST', 'attr':{'class': 'register'}})}}
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {value: app.user.nom}) }}
            </div>
            {{ form_errors(form.nom) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, {value: app.user.prenom}) }}
            </div>
            {{ form_errors(form.prenom) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.pays) }}
                {{ form_widget(form.pays, {value: app.user.pays}) }}
            </div>
            {{ form_errors(form.pays) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.codepostal) }}
                {{ form_widget(form.codepostal, {value: app.user.codepostal}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville, {value: app.user.ville}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.rue) }}
                {{ form_widget(form.rue, {value: app.user.rue}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.tel) }}
                {{ form_widget(form.tel, {value: app.user.tel}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="row no-padding">
            <div class="input-field col-lg-12">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {value: app.user.email}) }}
            </div>
            {{ form_errors(form.email) }}
        </div>
        <div class="row">
            <div class="input-field col-lg-12">
                {{ form_label(form.username) }}
                {{ form_widget(form.username, {value: app.user.username}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="row no-padding">
            <div class="input-field col-lg-12">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first) }}
            </div>
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="row no-padding">
            <div class="input-field col-lg-12">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second) }}
            </div>
            {{ form_errors(form.plainPassword.second) }}
        </div>
        <div align="center" class="button-wrap">
            <button class="btn-large waves-effect waves-light" type="submit" name="action">
                <i class="material-icons">Enregistrer</i>
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}